import java.util.Scanner;

public class ExericesFromFirstLab_01Lesson {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        int pens = Integer.parseInt(scanner.nextLine());
        int markers = Integer.parseInt(scanner.nextLine());
        int preparation = Integer.parseInt(scanner.nextLine());
        int percent = Integer.parseInt(scanner.nextLine());
        

        double penPrice = pens * 5.80;
        double markerPrice = markers * 7.20;
        double preparationPrice = preparation * 1.20;

        double priceForProducts = penPrice + markerPrice + preparationPrice;
        double discount = percent / 100.0;
        double result = priceForProducts - (priceForProducts * discount);

        System.out.println(result);
        

    }
}
